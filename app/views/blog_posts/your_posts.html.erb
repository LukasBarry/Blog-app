<% current_user.blog_posts.each do |blog_post| %>
  <div class="col-md-12">
    <div class="panel panel-success">
      <div class="panel-heading">
        <%= link_to blog_post.title, blog_post %>
      </div>
      <div class="panel-body">
        <p><span class="posted-at"><%= blog_post.created_at.strftime('%m/%d/%Y at %l:%M%p') %></span></p>
      </div>
      <div class="panel-footer">
        <%= link_to 'Show', blog_post, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-warning" %>
        <%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <% end %>
